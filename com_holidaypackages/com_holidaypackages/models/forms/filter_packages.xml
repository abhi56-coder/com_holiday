<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <!-- <field
            name="destination_id"
            type="hidden"
            default="0"
        /> -->

        <field
            name="search"
            type="text"
            label="COM_HOLIDAYPACKAGES_FILTER_SEARCH_LABEL"
            description="COM_HOLIDAYPACKAGES_FILTER_SEARCH_DESC"
            hint="JSEARCH_FILTER"
            class="form-control"
        />

        <field
            name="published"
            type="status"
            label="JOPTION_SELECT_PUBLISHED"
            description="JOPTION_SELECT_PUBLISHED_DESC"
            onchange="this.form.submit();"
            class="form-select"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>
    </fields>

    <fields name="list">
        <field
            name="fullordering"
            type="list"
            label="COM_HOLIDAYPACKAGES_SORT_BY"
            description="COM_HOLIDAYPACKAGES_SORT_BY_DESC"
            default="p.id ASC"
            onchange="this.form.submit();"
            class="form-select"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="p.id ASC">JGRID_HEADING_ID_ASC</option>
            <option value="p.id DESC">JGRID_HEADING_ID_DESC</option>
            <option value="p.title ASC">COM_HOLIDAYPACKAGES_FIELD_TITLE_LABEL_ASC</option>
            <option value="p.title DESC">COM_HOLIDAYPACKAGES_FIELD_TITLE_LABEL_DESC</option>
            <!-- <option value="destination_title ASC">COM_HOLIDAYPACKAGES_FIELD_DESTINATION_LABEL_ASC</option>
            <option value="destination_title DESC">COM_HOLIDAYPACKAGES_FIELD_DESTINATION_LABEL_DESC</option> -->
            <option value="p.duration ASC">COM_HOLIDAYPACKAGES_FIELD_DURATION_LABEL_ASC</option>
            <option value="p.duration DESC">COM_HOLIDAYPACKAGES_FIELD_DURATION_LABEL_DESC</option>
            <option value="p.price ASC">COM_HOLIDAYPACKAGES_FIELD_PRICE_LABEL_ASC</option>
            <option value="p.price DESC">COM_HOLIDAYPACKAGES_FIELD_PRICE_LABEL_DESC</option>
        </field>

        <field
            name="limit"
            type="limitbox"
            label="JGLOBAL_LIST_LIMIT"
            description="JGLOBAL_LIST_LIMIT_DESC"
            default="20"
            onchange="this.form.submit();"
            class="form-select"
        />
    </fields>
</form>
