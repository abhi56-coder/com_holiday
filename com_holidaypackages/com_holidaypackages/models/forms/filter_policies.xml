<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
            name="search"
            type="text"
            label="COM_HOLIDAYPACKAGES_FILTER_SEARCH_LABEL"
            description="COM_HOLIDAYPACKAGES_FILTER_SEARCH_DESC"
            hint="JSEARCH_FILTER"
            class="form-control"
            onchange="this.form.submit();"
        />

        <field
            name="published"
            type="status"
            label="JOPTION_SELECT_PUBLISHED"
            description="JOPTION_SELECT_PUBLISHED_DESC"
            onchange="this.form.submit();"
            class="form-select"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
            <!-- <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="-2">JTRASHED</option>
            <option value="2">JARCHIVED</option>
            <option value="*">JALL</option> -->
        </field>
    </fields>

    <fields name="list">
        <field
            name="fullordering"
            type="list"
            label="COM_HOLIDAYPACKAGES_SORT_BY"
            description="COM_HOLIDAYPACKAGES_SORT_BY_DESC"
            default="id ASC"
            onchange="this.form.submit();"
            class="form-select"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="id ASC">JGRID_HEADING_ID_ASC</option>
            <option value="id DESC">JGRID_HEADING_ID_DESC</option>
            <option value="title ASC">COM_HOLIDAYPACKAGES_FIELD_TITLE_LABEL_ASC</option>
            <option value="title DESC">COM_HOLIDAYPACKAGES_FIELD_TITLE_LABEL_DESC</option>
            <option value="published ASC">JSTATUS_ASC</option>
            <option value="published DESC">JSTATUS_DESC</option>
        </field>

        <field
            name="limit"
            type="limitbox"
            label="JGLOBAL_LIST_LIMIT"
            description="JGLOBAL_LIST_LIMIT_DESC"
            default="20"
            onchange="this.form.submit();"
            class="form-select"
        />
    </fields>
</form>